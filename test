<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Custom Mapbox Map with WMTS</title>
  <link href="https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.css" rel="stylesheet" />
  <script src="https://api.mapbox.com/mapbox-gl-js/v2.8.1/mapbox-gl.js"></script>
  <style>
    body { margin: 0; }
    #map { width: 100%; height: 500px; }
  </style>
</head>
<body>
  <div id="map"></div>
  <script>
    mapboxgl.accessToken = 'YOUR_MAPBOX_API_KEY';  // Replace with your Mapbox API Key

    var map = new mapboxgl.Map({
      container: 'map',
      style: 'https://api.mapbox.com/styles/v1/arieltillman/cm7p4xsd501e801qo6ih5hal4?access_token=YOUR_MAPBOX_API_KEY',
      center: [0, 0], // Coordinates for the center of the map
      zoom: 2           // Initial zoom level
    });

    // Add WMTS layer using Mapbox GL JS
    map.on('load', function() {
      map.addLayer({
        'id': 'wmts-layer',
        'type': 'raster',
        'source': {
          'type': 'raster',
          'tiles': [
            'https://api.mapbox.com/styles/v1/arieltillman/cm7p4xsd501e801qo6ih5hal4/wmts/{z}/{x}/{y}?access_token=YOUR_MAPBOX_API_KEY'
          ],
          'tileSize': 256
        },
        'paint': {
          'raster-opacity': 0.85
        }
      });
    });
  </script>
</body>
</html>
